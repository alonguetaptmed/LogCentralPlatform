@model List<StatCardViewModel>

<div class="row mb-4">
    @foreach (var stat in Model)
    {
        <div class="col-md-3">
            <div class="card dashboard-widget h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="card-text text-muted mb-1">@stat.Label</p>
                            <h3 class="card-title stat-value mb-0">@stat.Value</h3>
                        </div>
                        <div class="stat-icon text-@stat.IconColor">
                            <i class="bi bi-@stat.IconName"></i>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(stat.ChangeText))
                    {
                        <div class="mt-3">
                            <span class="badge bg-@(stat.IsPositiveChange ? "success" : "danger")">@stat.ChangeText</span>
                            <small class="text-muted ms-2">@stat.ChangeDescription</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
