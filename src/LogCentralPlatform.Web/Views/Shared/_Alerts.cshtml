@model List<AlertViewModel>

@if (Model != null && Model.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-bell me-2"></i>Alertes r√©centes</h5>
                <span class="badge bg-primary">@Model.Count</span>
            </div>
        </div>
        <div class="list-group list-group-flush">
            @foreach (var alert in Model)
            {
                <div class="list-group-item @(alert.Dismissible ? "alert-dismissible" : "")">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1 @(alert.Type == "danger" ? "text-danger" : alert.Type == "warning" ? "text-warning" : alert.Type == "success" ? "text-success" : "text-info")">
                            @if (alert.Type == "danger")
                            {
                                <i class="bi bi-exclamation-circle me-1"></i>
                            }
                            else if (alert.Type == "warning")
                            {
                                <i class="bi bi-exclamation-triangle me-1"></i>
                            }
                            else if (alert.Type == "success")
                            {
                                <i class="bi bi-check-circle me-1"></i>
                            }
                            else
                            {
                                <i class="bi bi-info-circle me-1"></i>
                            }
                            Alerte
                        </h6>
                        @if (alert.Dismissible)
                        {
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        }
                    </div>
                    <p class="mb-1">@alert.Message</p>
                </div>
            }
        </div>
        @if (Model.Count > 3)
        {
            <div class="card-footer text-end">
                <a href="/Alerts" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye me-1"></i> Voir toutes les alertes
                </a>
            </div>
        }
    </div>
}
