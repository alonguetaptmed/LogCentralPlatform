@model List<AlertViewModel>

@if (Model != null && Model.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-bell me-2"></i>Alertes r√©centes</h5>
                <span class="badge bg-primary">@Model.Count</span>
            </div>
        </div>
        <div class="list-group list-group-flush">
            @foreach (var alert in Model)
            {
                <a href="@alert.Url" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1 @(alert.Severity == "Critical" ? "text-danger" : alert.Severity == "Warning" ? "text-warning" : "")">
                            @if (alert.Severity == "Critical")
                            {
                                <i class="bi bi-exclamation-circle me-1"></i>
                            }
                            else if (alert.Severity == "Warning")
                            {
                                <i class="bi bi-exclamation-triangle me-1"></i>
                            }
                            else
                            {
                                <i class="bi bi-info-circle me-1"></i>
                            }
                            @alert.Title
                        </h6>
                        <small>@alert.FormattedTime</small>
                    </div>
                    <p class="mb-1">@alert.Message</p>
                    <small>@alert.SourceInfo</small>
                </a>
            }
        </div>
        @if (Model.Count > 3)
        {
            <div class="card-footer text-end">
                <a href="/Alerts" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye me-1"></i> Voir toutes les alertes
                </a>
            </div>
        }
    </div>
}
