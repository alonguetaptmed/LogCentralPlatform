@model ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex align-items-center justify-content-center mb-4">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                <h1 class="ms-3 mb-0 text-danger display-4">@(Model?.ErrorCode ?? "500")</h1>
            </div>
            
            <h2 class="mb-4">Une erreur s'est produite</h2>
            
            <div class="card mb-4">
                <div class="card-body py-4">
                    <p class="lead mb-4">@(Model?.ErrorMessage ?? "Une erreur inattendue s'est produite lors du traitement de votre demande.")</p>
                    
                    @if (Model?.ShowRequestId ?? false)
                    {
                        <div class="alert alert-light mb-4">
                            <strong>ID de la requête:</strong> <code>@Model?.RequestId</code>
                        </div>
                    }
                    
                    @if (Model?.ShowStackTrace ?? false && !string.IsNullOrEmpty(Model?.StackTrace))
                    {
                        <div class="accordion mb-4" id="errorDetails">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingDetails">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDetails" aria-expanded="false" aria-controls="collapseDetails">
                                        Détails de l'erreur
                                    </button>
                                </h2>
                                <div id="collapseDetails" class="accordion-collapse collapse" aria-labelledby="headingDetails" data-bs-parent="#errorDetails">
                                    <div class="accordion-body">
                                        <pre class="bg-light p-3 text-start rounded">@Model?.StackTrace</pre>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <div class="d-flex justify-content-center gap-3">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house-door me-1"></i> Retour à l'accueil
                </a>
                <button onclick="window.history.back();" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Retour à la page précédente
                </button>
            </div>
            
            <div class="mt-5">
                <p class="text-muted small">Si le problème persiste, contactez l'administrateur système.</p>
                <a href="mailto:support@logcentralplatform.com" class="btn btn-link">
                    <i class="bi bi-envelope me-1"></i> support@logcentralplatform.com
                </a>
            </div>
        </div>
    </div>
</div>
