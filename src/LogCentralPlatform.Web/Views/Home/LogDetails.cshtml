@model LogEntryViewModel
@{
    ViewData["Title"] = "Détails du log";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Accueil</a></li>
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Logs">Logs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Détails du log</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header @Model.LevelColorClass">
                    <h5 class="mb-0">
                        @if (Model.Level == LogLevel.Error || Model.Level == LogLevel.Critical)
                        {
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        }
                        else if (Model.Level == LogLevel.Warning)
                        {
                            <i class="bi bi-exclamation-circle-fill me-2"></i>
                        }
                        else
                        {
                            <i class="bi bi-info-circle-fill me-2"></i>
                        }
                        @Model.Level
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-3 text-muted">@Model.ServiceName (@Model.ServiceVersion) | @Model.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</h6>
                    <h5 class="card-title">@Model.Message</h5>

                    @if (!string.IsNullOrEmpty(Model.ExceptionDetails))
                    {
                        <div class="mt-4">
                            <h6>Détails de l'exception</h6>
                            <pre class="bg-light p-3 rounded"><code>@Model.ExceptionDetails</code></pre>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.StackTrace))
                    {
                        <div class="mt-4">
                            <h6>Stack Trace</h6>
                            <pre class="bg-light p-3 rounded"><code>@Model.StackTrace</code></pre>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">ID</dt>
                        <dd class="col-sm-7"><code>@Model.Id</code></dd>
                        
                        <dt class="col-sm-5">Service</dt>
                        <dd class="col-sm-7">@Model.ServiceName</dd>
                        
                        <dt class="col-sm-5">Version</dt>
                        <dd class="col-sm-7">@Model.ServiceVersion</dd>
                        
                        <dt class="col-sm-5">Environnement</dt>
                        <dd class="col-sm-7">@Model.Environment</dd>
                        
                        <dt class="col-sm-5">Client</dt>
                        <dd class="col-sm-7">@(Model.ClientName ?? "N/A")</dd>
                        
                        <dt class="col-sm-5">Catégorie</dt>
                        <dd class="col-sm-7">@Model.Category</dd>
                        
                        <dt class="col-sm-5">Horodatage</dt>
                        <dd class="col-sm-7">@Model.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                        
                        <dt class="col-sm-5">Reçu le</dt>
                        <dd class="col-sm-7">@Model.ReceivedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                    </dl>
                </div>
            </div>

            @if (Model.AnalyzedByAI)
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Analyse IA</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.AIAnalysisResult</p>
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Analyse IA</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Ce log n'a pas encore été analysé par l'IA.</p>
                        <form asp-action="AnalyzeLog" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-primary">Analyser maintenant</button>
                        </form>
                    </div>
                </div>
            }

            <div class="d-grid gap-2">
                <a asp-action="Logs" class="btn btn-secondary">Retour aux logs</a>
            </div>
        </div>
    </div>
</div>
